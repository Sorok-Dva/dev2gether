<div class="container" style="margin-top:150px;">
    <div class="row justify-content-center">
        <div class="card border-info mb-3 align-self-center" style="width:30rem">
            <div class="card-header">{{tr.pages.register.title_card_header}}</div>
            <div class="card-body">
                <p class="lead">{{tr.pages.register.card-lead}}</p>
                <form class="form-horizontal" action="/register" method="post">
                    <div class="form-group">
                        <label for="firstName">{{tr.pages.register.form_first_name_label}}</label>
                        <input id="firstName" name="firstName" type="text" value="{{body.firstName}}" placeholder="{{tr.pages.register.form_first_name_label_ph}}" class="form-control input-md" required="">
                    </div>
                    <div class="form-group">
                        <label for="lastName">{{tr.pages.register.form_last_name_label}}</label>
                        <input id="lastName" name="lastName" type="text" value="{{body.lastName}}" placeholder="{{tr.pages.register.form_last_name_label_ph}}" class="form-control input-md" required="">
                    </div>
                    <div class="form-group">
                        <label for="email">{{tr.pages.register.form_email_label}}</label>
                        <input id="email" name="email" type="email" value="{{body.email}}" placeholder="{{tr.pages.register.form_email_label_ph}}" class="form-control input-md" required="">
                        <small id="emailHelp" class="form-text text-muted">{{tr.pages.register.form_email_muted}}</small>
                    </div>
                    <div class="form-group">
                        <label for="password">{{tr.pages.register.form_password_label}}</label>
                        <input id="password" name="password" type="password" placeholder="{{tr.pages.register.form_password_label_ph}}" class="form-control input-md" required="">
                    </div>
                    <button class="btn btn-info btn-loader float-md-right" type="submit" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> {{tr.pages.register.form_submit_btn_loading_text}}">{{tr.pages.register.form_submit_btn}}</button>
                </form>
            </div>
        </div>
    </div>
</div>
